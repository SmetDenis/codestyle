{
    "name"        : "item8/codestyle",
    "license"     : "proprietary",
    "description" : "General code style for All Item8 PHP Projects",

    "authors"     : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "denis.smetannikov@item8.io"
        }
    ],

    "require"     : {
        "jbzoo/phpunit"             : "2.2.1",
        "jbzoo/utils"               : "^2.1",
        "fzaninotto/faker"          : "^1.7.1",
        "pdepend/pdepend"           : "2.5.0",
        "squizlabs/php_codesniffer" : "3.1.1",
        "jbzoo/phpunit-randomizer"  : "^3.1"
    },

    "autoload"    : {
        "classmap" : ["src"],
        "files"    : ["src/phpunit/defines.php"]
    },

    "extra"       : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    }
}
